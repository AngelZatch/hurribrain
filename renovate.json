{
  "extends": [
    "config:base"
  ],
  "reviewers": [
    "renovate[bot]",
    "AngelZatch"
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true,
    "rebaseStalePrs": true
  },
  "configMigration": true,
  "dependencyDashboard": true,
  "packageRules": [
    {
      "matchUpdateTypes": [
        "patch"
      ],
      "matchCurrentVersion": "!/^0/",
      "automerge": true
    }
  ]
}